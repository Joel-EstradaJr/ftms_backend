# ============================================================================
# FTMS (Finance Transaction Management System) - Environment Configuration
# ============================================================================

# ────────────────────────────────
# 🔧 Server Configuration
# ────────────────────────────────
NODE_ENV=development
PORT=4000
BASE_URL=http://localhost:4000

# ────────────────────────────────
# 🗄️ Database Connection
# ────────────────────────────────
DATABASE_URL=postgresql://postgres:password@localhost:5432/ftmsFinal_db?schema=public

# ────────────────────────────────
# 🔐 Security and Auth Config
# ────────────────────────────────
# JWT Secret (minimum 32 characters)
JWT_SECRET=your-very-long-jwt-secret-key-minimum-32-characters-for-security
JWT_EXPIRES_IN=8h

# ────────────────────────────────
# 🔗 Microservices Integration
# ────────────────────────────────
# This service's URL (FTMS)
FTMS_API_URL=http://localhost:4000

# Budget Request Microservice
BUDGET_API_URL=http://localhost:4001
BUDGET_SERVICE_API_KEY=BUDGET_SERVICE_SECRET_KEY_CHANGE_IN_PRODUCTION

# Audit Logs Microservice
AUDIT_API_URL=http://localhost:4004
AUDIT_SERVICE_API_KEY=AUDIT_SERVICE_SECRET_KEY_CHANGE_IN_PRODUCTION

# ────────────────────────────────
# 🚀 Redis Cache Configuration
# ────────────────────────────────
ENABLE_CACHE=true
REDIS_URL=redis://localhost:6379

# ────────────────────────────────
# 🌐 CORS Configuration
# ────────────────────────────────
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4001,http://localhost:4003,http://localhost:4004

# ────────────────────────────────
# 📊 External API Integrations
# ────────────────────────────────
# Human Resources API
HR_API_EMPLOYEES_URL=https://backends-blue.vercel.app/api/clean/hr_employees
HR_API_PAYROLL_URL=https://backends-blue.vercel.app/api/clean/hr_payroll
HR_AUTH_API_URL=http://localhost:3002

# Operations API
OP_API_BUSTRIP_URL=https://backends-blue.vercel.app/api/clean/op_bus-trip-details
NEXT_PUBLIC_OP_API_BUSTRIP_URL=https://backends-blue.vercel.app/api/clean/op_bus-trip-details

# ────────────────────────────────
# 🔄 Rate Limiting
# ────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ────────────────────────────────
# 📝 Logging
# ────────────────────────────────
LOG_LEVEL=info

# ────────────────────────────────
# 🧪 Testing Configuration
# ────────────────────────────────
# Set to 'true' ONLY for local testing - NEVER in production
DISABLE_AUTH=false
