{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2015", "ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "app", "components", "lib", "public", ".next"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020"
    },
    "files": true,
    "transpileOnly": false
  }
}