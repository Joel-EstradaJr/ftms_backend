{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2015", "ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "lib/**/*"],
  "exclude": ["node_modules", "dist", "app", "components", "public", ".next", "**/*.disabled", "**/*.disabled/**", "lib/admin.disabled/**", "lib/expenses.disabled/**", "**/*.bak"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020"
    },
    "files": true,
    "transpileOnly": false
  }
}